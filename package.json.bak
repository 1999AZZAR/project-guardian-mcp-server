{
  "name": "project-guardian-mcp",
  "version": "1.0.0",
  "description": "Project Guardian MCP - A focused Model Context Protocol server for project memory management and workflow guardianship with knowledge graph capabilities",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:prod": "cp package.json package.json.bak && cp package.prod.json package.json && npm ci --only=production && esbuild src/index.ts --bundle --minify --platform=node --target=node18 --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:sqlite3 --external:zod && mv package.json.bak package.json",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --maxWorkers=2",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t project-guardian-mcp .",
    "docker:run": "docker run --rm project-guardian-mcp",
    "prepublishOnly": "npm run clean && npm run build:prod"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "project-guardian",
    "memory-management",
    "knowledge-graph",
    "project-management",
    "workflow-guardian",
    "sqlite",
    "knowledge-base"
  ],
  "author": "1999AZZAR",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}